{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="small-8 small-offset-2 columns">
            <h3>Vous êtes le meneur du challenge: {{ challenge.nom }}</h3>
            {{ form_start(form) }}
            {{  form_label(form.src, 'Télecharger une image', {'label_attr': {'class':'small button' }}) }}
            {{ form_widget(form.src, {'attr': {'class':'show-for-sr ' }}) }}

            {% if challenge.images is defined %}
                 <a class="warning button" href="{{ path('challenge_passe', {'id':challenge.id}) }}">Passer</a>

            {% endif %}

            <input type="submit" class="float-right success button" value="Create" />
            {{ form_end(form) }}
            <a class="warning button" href="{{ path('challenge_index') }}">Back to the list</a>
        </div>
    </div>


{% endblock %}